    <select id="getAdministrator" parameterType="xyz.askway.pojo.Administrator" resultType="xyz.askway.pojo.Administrator">
      SELECT u_id,u_name,u_user_name,u_password FROM administrator WHERE
        <if test="uId!=null">
            u_id=#{uId}
        </if>
        <if test="u_name!=null">
            u_name=#{uName}
        </if>
        <if test="u_user_name!=null">
            u_user_name=#{uUserName}
        </if>
        <if test="u_password!=null">
            u_password=#{uPassword}
        </if>
    </select>

