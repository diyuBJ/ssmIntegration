<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.askway.wlm.dao.CURD">

    <resultMap id="StudentBean" type="xyz.askway.wlm.pojo.StudentBean">
        <id property="sid" column="sid"/>
        <result property="sname" column="sname"/>
        <result property="ssex" column="ssex"/>
        <result property="sage" column="sage"/>
    </resultMap>

    <!--查询所有-->
    <select id="queryAll" resultMap="StudentBean" >
        SELECT * FROM tb_student
    </select>
    <!--查询单个-->
    <select id="queryOne" resultType="xyz.askway.wlm.pojo.StudentBean">
        select * from tb_student where sname like '%${arg}%'
    </select>

    <!--添加一个学生-->
    <insert id="addOne">
        insert into tb_student values (null,#{stu.sname},${stu.ssex},${stu.sage})
    </insert>

    <!--更新一个学生信息-->
    <update id="update">
        update tb_student set sname=#{stu.sname}, ssex=${stu.ssex},sage=${stu.sage} where sid=${stu.sid}
    </update>

    <delete id="delete">
        delete from tb_student where sname = #{name}
    </delete>

</mapper>